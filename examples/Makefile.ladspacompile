DEST	:= ladspadir/
dspsrc  := $(wildcard *.dsp)
cppsrc  := $(addprefix $(DEST), $(dspsrc:.dsp=.cpp))
modules	:= $(addprefix $(DEST),  $(dspsrc:%.dsp=%.so))
os 	:= $(shell uname)

###allcpp: $(cppsrc)

allmodules: $(modules)

#FIXME: Should use $(LINUXCFLAGS) and $(DARWINCFLAGS) below:

$(DEST)%.so: $(DEST)%.cpp
ifeq ($(os), Darwin)
	$(CXX) $(LIB) -bundle -O3 -msse -Dmydsp=$(patsubst %.so,%,$(notdir $@)) $< -o $@
else
	$(CXX) $(LIB) -shared -O3 $(CXXFLAGS) -Dmydsp=$(patsubst %.so,%,$(notdir $@)) $< -o $@
endif

$(DEST)%.cpp: %.dsp 
	faust $(VEC) -a ladspa.cpp $< -o $@

clean:
	rm -rf $(DEST)
