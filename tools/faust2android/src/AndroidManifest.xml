<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faustApp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.faustApp.faustApp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.faustApp.DisplayWelcomeActivity"
            android:label="@string/title_activity_display_welcome"
            android:parentActivityName="com.faustApp.faustApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faustApp.faustApp" />
        </activity>
        <activity
            android:name="com.faustApp.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.faustApp.faustApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faustApp.faustApp" />
        </activity>
        <activity
            android:name="com.faustApp.AudioSettings"
            android:label="@string/title_activity_audio_settings"
            android:parentActivityName="com.faustApp.Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faustApp.Settings" />
        </activity>
        <activity
            android:name="com.faustApp.OSCSettings"
            android:label="@string/title_activity_oscsettings"
            android:parentActivityName="com.faustApp.Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faustApp.Settings" />
        </activity>
        <activity
            android:name="com.faustApp.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.faustApp.faustApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faustApp.faustApp" />
        </activity>
    </application>

</manifest>